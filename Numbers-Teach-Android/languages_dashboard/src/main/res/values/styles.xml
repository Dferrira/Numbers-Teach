<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GenericDashboardButton">
        <item name="android:layout_gravity">center|center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:minHeight">@dimen/dashboard_buttons_size</item>
        <item name="android:minWidth">@dimen/dashboard_buttons_size</item>
        <item name="android:background">@drawable/button_background_selector</item>
    </style>

    <style name="DashboardButton" parent="GenericDashboardButton"></style>

</resources>
