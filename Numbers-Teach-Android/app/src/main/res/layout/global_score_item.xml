<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/list_item_margins"
        android:layout_marginLeft="@dimen/list_item_margins"
        android:layout_marginTop="@dimen/list_item_margins"
        android:contentDescription="@string/loading"
        android:src="@mipmap/exercises" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/icon"
        android:layout_marginStart="@dimen/list_item_margins"
        android:layout_marginLeft="@dimen/list_item_margins"
        android:layout_marginTop="@dimen/list_item_margins"
        android:layout_toStartOf="@id/score"
        android:layout_toLeftOf="@id/score"
        android:layout_toEndOf="@id/icon"
        android:layout_toRightOf="@id/icon"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/loading"
        android:textColorLink="@color/white"
        android:textSize="@dimen/list_item_text_size" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/date"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:text="@string/loading"
        android:textColorLink="@color/white"
        android:textSize="@dimen/list_item_text_size" />


</RelativeLayout>